<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/textIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingRight="5dp"
        android:src="@drawable/ic_account_circle_color" />

    <TextView
        android:id="@+id/txt_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/textIcon"
        android:layout_toEndOf="@+id/textIcon"
        android:singleLine="true"
        android:text="Mom"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="I will be late today"
        android:textSize="12sp"
        android:layout_below="@+id/txt_user_name"
        android:layout_alignLeft="@+id/txt_user_name"
        android:layout_alignStart="@+id/txt_user_name" />

</RelativeLayout>